@model List<WebApp1.Models.Group>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Create
</button>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Size</th>
        </tr>
    </thead>
    <tbody>
        @foreach (WebApp1.Models.Group item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Size</td>
            </tr>
        }
    </tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <form enctype="multipart/form-data" action="/group/create" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Module</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div>
                        <label>Chose file CSV</label>
                        <input type="file" name="f" accept=".csv" />
                    </div>
                    <div>
                        <button>Save Changes</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>

        </div>
    </div>
</div>