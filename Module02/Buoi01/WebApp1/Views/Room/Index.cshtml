@model List<WebApp1.Models.Room>


@Html.ActionLink("Create", "Create", "Room")
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                Room Id
            </th>
            <th>Room Number</th>
            <th>Capacity</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Number</td>
                <td>@item.Capacity</td>
                <td>
                    <a href="/Room/Delete/@item.Id"><i class="fas fa-trash"></i>|</a>
                    <a href="/Room/Edit/@item.Id"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
