@model ForgotPassword
@{
    Layout = "_LayoutAuth";
}
<div class="card-header"><h3 class="text-center font-weight-light my-4">Change Password</h3></div>
<div class="card-body">
    <div asp-validation-summary="All"></div>
    <form method="post">
         
        <div class="form-group">
            <label class="small mb-1"asp-for="Email" >Email</label>
            <input class="form-control py-4" asp-for="Email" aria-describedby="emailHelp"  placeholder="Enter Username/Email" type="email"  />
        </div>
        

        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
            <a class="small" href="/auth/login">Return to login</a>

            <button class="btn btn-primary">Reset Password</button>
        </div>
    </form>
</div>
<div class="card-footer text-center">
    <div class="small"><a href="/auth/register">Need an account? Go to login</a></div>
</div>
