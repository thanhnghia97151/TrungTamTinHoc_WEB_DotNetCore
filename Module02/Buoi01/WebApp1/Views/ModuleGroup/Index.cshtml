@model List<WebApp1.Models.ModuleGroup>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Import CSV
    </button>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#excel">
        Import EXE
    </button>
    <table class="table table-bordered">
        <thead class="table-dark">
            @*<tr>
            <th>Module Id</th>
            <th>Group ID</th>
        </tr>*@
            <tr>
                <th>Module Id</th>
                <th>Group ID</th>
                <th>Group size</th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var item in Model)
        {
            <tr>
                <td>@item.ModuleId</td>
                <td>@item.GroupId</td>
            </tr>
        }*@
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Module.Name</td>
                    <td>@item.GroupId</td>
                    <td>@item.Group.Size</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <form enctype="multipart/form-data" method="post" action="/modulegroup/create">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Module</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div>
                            <label>Chose File CSV</label>
                            <input type="file" name="f" accept=".csv" />
                        </div>
                        <div>
                            <button>Save Changes</button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="excel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <form enctype="multipart/form-data" method="post" action="/modulegroup/excel">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Module</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div>
                            <label>Chose File Excel</label>
                            <input type="file" name="f" accept=".xlsx" />
                        </div>
                        <div>
                            <button>Save Changes</button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>

            </div>
        </div>
    </div>